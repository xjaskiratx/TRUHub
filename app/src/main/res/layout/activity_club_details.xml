<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9F3">

    <!-- Blue Strip -->
    <View
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@android:color/holo_blue_dark" />

    <!-- Toolbar -->
    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/holo_blue_dark"
        app:navigationIcon="@drawable/ic_back_arrow">

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/club_details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_gravity="center" />

    </com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp">

            <TextView
                android:id="@+id/clubDetailsName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club Name"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/clubDetailsCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/clubDetailsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club Description"
                android:textSize="15sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/clubDetailsLeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Club Leader:"
                android:textColor="#333333"
                android:textSize="16sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/clubDetailsMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Members: 0"
                android:textColor="#333333"
                android:textSize="15sp"
                android:layout_marginBottom="32dp" />

            <!-- Apply for Role Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/clubDetailsApplyBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Apply for Role"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:textColor="@android:color/white"
                android:layout_gravity="center" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
