<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_card_bg"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    android:backgroundTint="@android:color/system_surface_dim_light">

    <!-- Top row: Title + Map Pin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <TextView
            android:id="@+id/placeTitle"
            android:text="Place Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mapPinIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_pin"
            android:contentDescription="@string/view_on_map"
            app:tint="@android:color/holo_blue_dark"
            android:padding="2dp" />
    </LinearLayout>

    <!-- Description -->
    <TextView
        android:id="@+id/placeDesc"
        android:text="Short description here"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Combined Category & Subcategory -->
    <TextView
        android:id="@+id/placeMeta"
        android:text="Food â€¢ Indian"
        android:textSize="13sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
