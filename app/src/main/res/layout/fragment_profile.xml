<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAF9F3"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImageCircle"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="40dp"
            android:scaleType="centerCrop"
            android:padding="4dp"
            app:shapeAppearanceOverlay="@style/CircleImageAppearance" />


        <TextView
            android:id="@+id/profileFullNamePersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="John Doe â€“ student"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <View
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <TextView
            android:id="@+id/profileActionsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile Actions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="12dp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/actionEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit profile"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:clickable="true"
            android:textColor="#000000"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/actionBecomeContributor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a club"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:clickable="true"
            android:textColor="#000000"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/actionApplyClubRole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply for a club role"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:clickable="true"
            android:textColor="#000000"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/actionClubRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Club requests"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:visibility="gone"
            android:clickable="true"
            android:textColor="#000000"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/actionDeleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete account"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:clickable="true"
            android:textColor="#D32F2F"
            android:foreground="?attr/selectableItemBackground" />

        <TextView
            android:id="@+id/actionLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="15sp"
            android:paddingVertical="14dp"
            android:clickable="true"
            android:textColor="#D32F2F"
            android:foreground="?attr/selectableItemBackground" />

    </LinearLayout>

</ScrollView>