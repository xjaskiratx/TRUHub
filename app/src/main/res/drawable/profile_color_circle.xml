<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Fixed size for consistency -->
    <size
        android:width="40dp"
        android:height="40dp" />

    <!-- Default neutral color (Java will replace using GradientDrawable.setColor()) -->
    <solid android:color="#DDDDDD" />

    <!-- Stroke only for selection (set dynamically in Java) -->
    <stroke
        android:width="3dp"
        android:color="@android:color/transparent" />

</shape>
