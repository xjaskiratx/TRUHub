<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- Transparent fill so no white halo behind photos -->
    <solid android:color="@android:color/transparent" />

    <!-- Light neutral border (runtime will override this when needed) -->
    <stroke
        android:width="3dp"
        android:color="#CCCCCC" />

    <!-- Keep things safe inside circle -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>
